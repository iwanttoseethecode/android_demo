<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luoling.android_dome.chapter5.After5_4Activity">

    <Spinner
        android:id="@+id/selectSpinner"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:entries="@array/Layer1"
        android:prompt="@string/prompt" />

    <com.example.luoling.android_dome.chapter5.PorterDuffXferView
        android:id="@+id/porterDuffXferView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/selectSpinner"/>

    <com.example.luoling.android_dome.chapter5.CirclePhotoSpannableView
        android:id="@+id/circlePhotoSpannableView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/selectSpinner"/>

    <com.example.luoling.android_dome.chapter5.AnomalousPhotoView
        android:id="@+id/anomalousPhotoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/selectSpinner"/>

    <com.example.luoling.android_dome.chapter5.GuaGuaLeView
        android:id="@+id/guagualeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/selectSpinner"/>

</RelativeLayout>
