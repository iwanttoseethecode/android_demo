<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:nb="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_chapter6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luoling.android_dome.chapter6.Chapter6Activity">

    <Spinner
        android:id="@+id/mySpinner"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:entries="@array/chapter6"
        android:prompt="@string/prompt" />

    <com.example.luoling.android_dome.chapter6.FistView
        android:id="@+id/fistView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mySpinner"
        nb:text="无形装逼，最为致命"/>

</RelativeLayout>
