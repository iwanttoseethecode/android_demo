<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luoling.android_dome.circleprogressbar.CircleProgressBarActivity">

    <com.example.luoling.android_dome.circleprogressbar.CircleProgressBar
        android:id="@+id/myCircle"
        android:layout_margin="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:roundProgressColor = "@android:color/holo_red_dark"
        app:roundColor = "@android:color/holo_orange_dark"
        app:textColor = "#777777"
        app:textSize="20sp"
        app:roundWidth="15dp"/>

</android.support.constraint.ConstraintLayout>
