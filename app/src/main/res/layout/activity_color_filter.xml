<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".colorFilter.ColorFilterActivity">

    <Spinner
        android:id="@+id/selectSpinner"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:entries="@array/maskOrColorFilter"
        />

    <com.example.luoling.android_dome.colorFilter.ColorFilterView
        android:id="@+id/colorFilterView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/selectSpinner"
        />

</RelativeLayout>