<?xml version="1.0" encoding="utf-8"?>
<com.example.luoling.android_dome.customCoordinator.CustomCoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luoling.android_dome.customCoordinator.CustomCoordinatorLayoutActivity">

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@mipmap/titlebar_bg"
        android:scaleType="centerCrop"
        app:layout_behavior="com.example.luoling.android_dome.customCoordinator.ImageBehavior"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        app:layout_behavior="com.example.luoling.android_dome.customCoordinator.ToolBarBehavior"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/img">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/large_text"/>
        
    </android.support.v4.widget.NestedScrollView>

</com.example.luoling.android_dome.customCoordinator.CustomCoordinatorLayout>
