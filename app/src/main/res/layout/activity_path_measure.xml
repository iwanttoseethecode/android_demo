<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PathMeasure.PathMeasureActivity">

    <Spinner
        android:id="@+id/selectSpinner"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:entries="@array/pathMeasureUse"/>

    <com.example.luoling.android_dome.PathMeasure.GrabageView
        android:id="@+id/grabageView"
        android:layout_below="@id/selectSpinner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <com.example.luoling.android_dome.PathMeasure.PathMeasureBasicView
        android:id="@+id/pathMeasureView"
        android:layout_below="@id/selectSpinner"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <com.example.luoling.android_dome.PathMeasure.SmileLoadingView
        android:id="@+id/smileLoadingView"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="gone"
        />

    <com.example.luoling.android_dome.PathMeasure.LoadingView
        android:id="@+id/loadingView"
        android:layout_below="@id/selectSpinner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <com.example.luoling.android_dome.PathMeasure.ShipView
        android:id="@+id/shipView"
        android:layout_below="@id/selectSpinner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <com.example.luoling.android_dome.PathMeasure.HeadView
        android:id="@+id/headView"
        android:layout_below="@id/selectSpinner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone"
        android:background="@color/white"
        app:besselViewBackGround="@mipmap/headview_bg"
        app:numberText="2321434"
        app:numberTextColor="@color/white"
        app:numberTextSize="28sp"
        app:unitText="分"
        app:unitTextColor="@color/white"
        app:unitTextSize="14sp"
        app:describeText="无形之刃，最为致命;无形之刃，最为致命"
        app:describeTextColor="@color/white"
        app:describeTextSize="14sp"/>

</RelativeLayout>