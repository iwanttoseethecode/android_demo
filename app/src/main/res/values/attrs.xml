<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DiscrollView_LayoutParams">
        <attr name = "discrollve_alpha" format="boolean"/>
        <attr name="discrollve_scaleX" format="boolean"/>
        <attr name="discrollve_scaleY" fromat="boolean"/>
        <attr name="discrollve_fromBgColor" format="color"/>
        <attr name="discrollve_toBgColor" format="color"/>
        <attr name="discrollve_translation"/>
    </declare-styleable>

    <attr name="discrollve_translation">
        <flag name="fromTop" value="0x01"/>
        <flag name="fromBottom" value="0x02"/>
        <flag name="fromLeft" value="0x04"/>
        <flag name="fromRight" value="0x08"/>
    </attr>
    
    <declare-styleable name="DragBubbleView">
        <attr name="bubble_radius" format="dimension"/>
        <attr name="bubble_color" format="color"/>
        <attr name="bubble_text" format="string"/>
        <attr name="bubble_textSize" format="dimension"/>
        <attr name="bubble_textColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="SiderMenu">
        <attr name="maxTranslationX" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="HeadView">
        <attr name="besselViewBackGround" format="reference"/>
        <attr name="numberText" format="string"/>
        <attr name="numberTextColor" format="color"/>
        <attr name="numberTextSize"  format="dimension"/>
        <attr name="unitText"  format="string"/>
        <attr name="unitTextColor"  format="color"/>
        <attr name="unitTextSize"   format="dimension"/>
        <attr name="describeText"  format="string"/>
        <attr name="describeTextColor"  format="color"/>
        <attr name="describeTextSize"   format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CustomCoordinatorLayout">
        <attr name="layout_behavior" format="string"/>
    </declare-styleable>
</resources>